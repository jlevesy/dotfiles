# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "disk /home"
order += "cpu_usage"
order += "load"
order += "cpu_temperature 0"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "battery 1"
order += "volume master"
order += "tztime sf"
order += "tztime utc"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "0 %status %percentage %remaining %consumption"
        hide_seconds = true
        status_chr = "⚇ CHR"
        status_bat = "⚡ BAT"
        status_full = "☻ FULL"
        format_down = "No Battery"
        low_threshold = 25
        threshold_type = "percentage"
}

battery 1 {
        format = "1 %status %percentage %remaining %consumption"
        hide_seconds = true
        status_chr = "⚇ CHR"
        status_bat = "⚡ BAT"
        status_full = "☻ FULL"
        format_down = "No Battery"
        low_threshold = 10
        threshold_type = "percentage"
}

tztime local {
        format = "%H:%M:%S %Y-%m-%d"
}

tztime sf {
        format = "%H:%M:%S"
        timezone = "America/Los_Angeles"
}

tztime utc {
        format = "%H:%M:%S"
        timezone = "UTC"
}

disk "/" {
        format = "%avail"
}

disk "/home" {
        format = "%avail"
}

cpu_temperature 0 {
        format = "T: %degrees °C"
}

load {
        format = "%1min %5min %15min"
}

disk "/" {
        format = "%avail"
}

disk "/home" {
        format = "%avail"
}

cpu_temperature 0 {
        format = "T: %degrees °C"
        max_threshold = 60
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "pulse:0"
}
