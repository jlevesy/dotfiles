configuration {
    modi: "drun";
    dpi: 1;
    // Timeout from user input.
    timeout {
        // The delay after inactivity to execute action.
        delay: 0;
        // The action to execute once the delay expires.
        action: "kb-cancel";
    }

    // File browser modi.
    filebrowser {
        sorting-method:    "name";
        directories-first: true;
    }
}

@theme "/usr/share/rofi/themes/gruvbox-dark.rasi"
